{
  "manifest_version": 2,
  "name": "RefSense - AI Metadata Extractor",
  "version": "1.0.0",
  "description": "Extract bibliographic metadata from PDF files using AI (OpenAI or Ollama)",
  "author": "zotero-refsense",
  "homepage_url": "https://github.com/your-username/zotero-refsense",
  
  "applications": {
    "zotero": {
      "id": "refsense@zotero-plugin",
      "update_url": "https://github.com/your-username/zotero-refsense/releases/latest/download/update.rdf",
      "strict_min_version": "7.0.0",
      "strict_max_version": "7.*"
    }
  },

  "background": {
    "scripts": ["bootstrap.js"]
  },

  "permissions": [
    "storage"
  ]
}